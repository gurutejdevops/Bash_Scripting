#/bin/bash

#shebang Notation
date="$(date +%d)"
session_count="$(who | wc -l)"

echo "Welcome To Bash Scripting"
echo -e "\e[32m the date is ${date} \e[0m"
echo -e "\e[32m the date is ${session_count} \e[0m"

echo -e "\e[32m Line1 \e[0m"
echo "Line2"
echo "x is ${x}"
echo "The file name is $0"
read -p "Enter the age:" age
echo "The age is ${age}"

ACTION=$1

case ${ACTION} in
    start)
        echo "the payment services is started"
        ;;
    stop)
        echo "The services are stooped"
        ;;
    *)
        echo "Please select start or stop"
        ;;
esac
